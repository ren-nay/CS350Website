extends layout

block scripts
    script(scr='/siteScript.js')

block content
    .endForm
        h2#thankMsg
        h4#youMsg
        form#commentForm(name='commentForm', method='POST', action='/')
            h3 Have some feedback? Let me know!
            |             Name:
            input#name(type='text' name='name' size='30')
            br
            |             Address:
            input#address(type='text' name='address' size='50')
            br
            |             Phone:
            input#phone(type='tel' name='phone' placeholder='XXX-XXX-XXXX' size='15' maxlength='15')
            br
            |             Email:
            input#email(type='email' name='email' placeholder='youremail@example.com' size='50')
            br
            |             Site Rating:
            input(type='range' name='rating' min='0' max='5' list='stars')
            datalist#stars
            option(value='0' label='0 stars')
            option(value='1')
            option(value='2')
            option(value='3')
            option(value='4')
            option(value='5' label='5 stars')
            br
            |             Comments:
            textarea#comment(name='comment' form='commentForm' placeholder='Write comments here!')
            br
            br
            input(type='reset' value='Reset')
            input(type='button' value='Send Feedback' onclick="validateForm(this.form, document.getElementById('reCommentBtn'));")
        button#reCommentBtn(type='button' onclick="revealForm(document.getElementById('commentForm'), document.getElementById('reCommentBtn'));") Click Here to Comment More!
